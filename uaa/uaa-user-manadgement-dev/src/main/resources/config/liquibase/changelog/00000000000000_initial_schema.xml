<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>
    <property name="now" value="now()" dbms="mysql"/>
    <property name="autoIncrement" value="true"/>

    <!--
        Account Microservice core tables.
        The initial schema has the '00000000000001' id, so that it is over-written if we re-generate it.
    -->
    <changeSet id="00000000000001" author="sergio11">
        
        <!-- Table For Users -->
        <createTable tableName="USERS">
            <!-- Account Id -->
            <column name="identity" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <!-- User login name -->
            <column name="username" type="varchar(30)">
                <constraints unique="true" nullable="false"/>
            </column>
            <!-- User display name -->
            <column name="display_name" type="varchar(30)">
                <constraints unique="true" nullable="false"/>
            </column>
            <!-- User Password -->
            <column name="password" type="varchar(60)"/>
            <!-- Account Firstname -->
            <column name="first_name" type="varchar(30)">
                <constraints unique="false" nullable="false"/>
            </column>
            <!-- Account Lastname -->
            <column name="last_name" type="varchar(30)">
                <constraints unique="false" nullable="false"/>
            </column>
            <!-- Account email -->
            <column name="email" type="varchar(90)">
                <constraints unique="true" nullable="false"/>
            </column>
            <!-- Account Title -->
            <column name="title" type="varchar(30)">
                <constraints unique="false" nullable="false"/>
            </column>
            <!-- Account initials -->
            <column name="initials" type="varchar(2)">
                <constraints unique="false" nullable="false"/>
            </column>
            <!-- Account Status -->
            <column name="status" type="varchar(20)">
                <constraints unique="false" nullable="false"/>
            </column>
            
        </createTable>
        
        <createIndex indexName="idx_user_username"
            tableName="USERS"
            unique="true">
            <column name="username" type="varchar(30)"/>
        </createIndex>
        
        <createIndex indexName="idx_user_email"
            tableName="USERS"
            unique="true">
            <column name="email" type="varchar(90)"/>
        </createIndex>
        
        <createIndex indexName="idx_user_status"
            tableName="USERS"
            unique="false">
            <column name="status" type="varchar(20)"/>
        </createIndex>
        
        <!-- Table for Authorities -->
        <createTable tableName="AUTHORITIES">
            <!-- Authority id -->
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <!-- Authority name -->
            <column name="type" type="varchar(50)">
                 <constraints unique="true" nullable="false"/>
            </column>
            <!-- Authority Description -->
            <column name="description" type="varchar(60)">
                 <constraints  nullable="true"/>
            </column>
            
        </createTable>

        <!-- Table For User Authorities -->
        <createTable tableName="USER_AUTHORITIES">
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="authority_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="user_id, authority_id" tableName="USER_AUTHORITIES"/>

        <addForeignKeyConstraint 
            baseColumnNames="authority_id"
            baseTableName="USER_AUTHORITIES"
            constraintName="fk_authority_id"
            referencedColumnNames="id"
            referencedTableName="AUTHORITIES" />

        <addForeignKeyConstraint 
            baseColumnNames="user_id"
            baseTableName="USER_AUTHORITIES"
            constraintName="fk_user_id"
            referencedColumnNames="identity"
            referencedTableName="USERS" />
        
        <!-- Table For User Events -->
        <createTable tableName="USERS_EVENTS">
            <!-- Event Id -->
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <!-- Event Id -->
            <column name="events_id" type="bigint">
                <constraints unique="true" nullable="false"/>
            </column>
            <!-- Event Type -->
            <column name="type" type="varchar(50)">
                 <constraints unique="false" nullable="false"/>
            </column>
            <!-- Event User -->
            <column name="user_identity" type="bigint">
                <constraints nullable="false"/>
            </column>
            <!-- Event createdAt -->
            <column name="created_at" type="bigint" />
            <!-- Event lastModified -->
            <column name="last_modified" type="bigint" />
        </createTable>
        
        <addForeignKeyConstraint 
                baseColumnNames="user_identity"
                baseTableName="USERS_EVENTS"
                constraintName="fk_user_events_id"
                referencedColumnNames="identity"
                referencedTableName="USERS" />
        
        <!-- Table For OAUTH Client Details  -->
        <createTable tableName="OAUTH_CLIENT_DETAILS">
            <!-- Client Id -->
            <column name="client_id" type="varchar(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column> 
            <!-- Resource Ids -->
            <column name="resource_ids" type="varchar(255)"></column>
            <!-- Client Secret -->
            <column name="client_secret" type="varchar(255)"></column>
            <!-- Scopes -->
            <column name="scope" type="varchar(255)"></column>
            <!-- Authorized grant types -->
            <column name="authorized_grant_types" type="varchar(255)"></column>
            <!-- Web Server Redirect Uri -->
            <column name="web_server_redirect_uri" type="varchar(255)"></column>
            <!-- authorities -->
            <column name="authorities" type="varchar(255)"></column>
            <!-- access_token_validity -->
            <column name="access_token_validity" type="int"></column>
            <!-- refresh_token_validity -->
            <column name="refresh_token_validity" type="int"></column>
            <!-- additional_information -->
            <column name="additional_information" type="varchar(4096)"></column>
            <!-- autoapprove -->
            <column name="autoapprove" type="varchar(255)"></column>
        </createTable>
        
        <!-- Load Initial Data -->
        <loadData encoding="UTF-8"
                  file="config/liquibase/data/users.csv"
                  separator=";"
                  tableName="USERS">
            <column name="enabled" type="boolean"/>
        </loadData>
        
        <loadData encoding="UTF-8"
                  file="config/liquibase/data/authorities.csv"
                  separator=";"
                  tableName="AUTHORITIES"/>

        <loadData encoding="UTF-8"
                  file="config/liquibase/data/users_authorities.csv"
                  separator=";"
                  tableName="USER_AUTHORITIES"/>
        
    </changeSet>

</databaseChangeLog>
