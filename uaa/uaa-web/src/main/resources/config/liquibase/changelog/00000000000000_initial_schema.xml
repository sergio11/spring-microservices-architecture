<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>
    <property name="now" value="now()" dbms="mysql"/>
    <property name="autoIncrement" value="true"/>

    <!--
        Account Microservice core tables.
        The initial schema has the '00000000000001' id, so that it is over-written if we re-generate it.
    -->
    <changeSet id="00000000000001" author="sergio11">
        <createTable tableName="USERS">
            <!-- Account Id -->
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <!-- User login name -->
            <column name="username" type="varchar(30)">
                <constraints unique="true" nullable="false"/>
            </column>
            <!-- User Password -->
            <column name="password" type="varchar(60)"/>
            <!-- User Last login access -->
            <column name="lastLoginAccess" type="date"/>
            <!-- User status -->
            <column name="enabled" type="boolean" valueBoolean="true">
                <constraints nullable="false" />
            </column>
            <!-- Account Firstname -->
            <column name="firstName" type="varchar(30)">
                <constraints unique="false" nullable="false"/>
            </column>
            <!-- Account Lastname -->
            <column name="lastName" type="varchar(30)">
                <constraints unique="false" nullable="false"/>
            </column>
            <!-- Account email -->
            <column name="email" type="varchar(90)">
                <constraints unique="true" nullable="false"/>
            </column>
            <!-- Account Status -->
            <column name="status" type="varchar(20)">
                <constraints unique="false" nullable="false"/>
            </column>
        </createTable>
        
        <createIndex indexName="idx_user_username"
            tableName="USERS"
            unique="true">
            <column name="username" type="varchar(30)"/>
        </createIndex>
        
        <createIndex indexName="idx_user_email"
            tableName="USERS"
            unique="true">
            <column name="email" type="varchar(90)"/>
        </createIndex>
        
        <createIndex indexName="idx_user_status"
            tableName="USERS"
            unique="false">
            <column name="status" type="varchar(20)"/>
        </createIndex>
        
        <createTable tableName="AUTHORITIES">
            <!-- Authority id -->
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <!-- Authority name -->
            <column name="type" type="varchar(50)">
                 <constraints unique="true" nullable="false"/>
            </column>
            <!-- Authority Description -->
            <column name="description" type="varchar(60)">
                 <constraints  nullable="true"/>
            </column>
            
        </createTable>

        <createTable tableName="USER_AUTHORITIES">
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="authority_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="user_id, authority_id" tableName="USER_AUTHORITIES"/>

        <addForeignKeyConstraint baseColumnNames="authority_id"
                                 baseTableName="USER_AUTHORITIES"
                                 constraintName="fk_authority_id"
                                 referencedColumnNames="id"
                                 referencedTableName="AUTHORITIES"/>

        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="USER_AUTHORITIES"
                                 constraintName="fk_user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="USERS"/>
        
        
        <!-- Load Initial Data -->
        <loadData encoding="UTF-8"
                  file="config/liquibase/data/users.csv"
                  separator=";"
                  tableName="USERS">
            <column name="enabled" type="boolean"/>
        </loadData>
        
        <loadData encoding="UTF-8"
                  file="config/liquibase/data/authorities.csv"
                  separator=";"
                  tableName="AUTHORITIES"/>

        <loadData encoding="UTF-8"
                  file="config/liquibase/data/users_authorities.csv"
                  separator=";"
                  tableName="USER_AUTHORITIES"/>
        
    </changeSet>

</databaseChangeLog>
